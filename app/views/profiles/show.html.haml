- model_class = Profile
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @profile.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @profile.description

= link_to t('.back', :default => t("helpers.links.back")), project_profiles_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_project_profile_path(@profile.project, @profile), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), project_profile_path(@profile.project, @profile), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

.page-header
  %h3 Performances
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @profile.performances.each do |performance|
      %tr
        %td= performance.criterion.name
        %td= performance.value
        %td= performance.created_at.asctime
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_profile_performance_path(@profile.project, @profile, performance), :class => 'btn btn-info btn-xs'
