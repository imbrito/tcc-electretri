- model_class = Criterion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:weigth)
      %th= model_class.human_attribute_name(:preference)
      %th= model_class.human_attribute_name(:indifference)
      %th= model_class.human_attribute_name(:veto)
      %th= model_class.human_attribute_name(:direction)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @criterions.each do |criterion|
      %tr
        %td= criterion.name
        %td= criterion.weigth
        %td= criterion.preference
        %td= criterion.indifference
        %td= criterion.veto
        %td= criterion.direction
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_criterion_path(criterion.project, criterion), :class => 'btn btn-info btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), project_criterion_path(criterion.project, criterion), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_project_criterion_path, :class => 'btn btn-primary'
= link_to t('.back', :default => t("helpers.links.back_project")), project_path(@project), :class => 'btn btn-default'
