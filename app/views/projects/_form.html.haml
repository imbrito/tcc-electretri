.col-sm-6.col-md-4.col-md-offset-4
	= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f|
		= f.error :base
		= f.error_notification
		
		= f.input :name
		= f.input :description
		= f.input_field :flag, as: :boolean
		= f.label('Enable to veto? ')
		= f.input :cut, collection: Project::CUT
		= f.button :submit, :class => 'btn-primary'
		- if params[:action].eql?('edit')
			= link_to t('.cancel', :default => t("helpers.links.cancel")), project_path(@project), :class => 'btn btn-default'
		- else
			= link_to t('.cancel', :default => t("helpers.links.cancel")), root_path, :class => 'btn btn-default'
