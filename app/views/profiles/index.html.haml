- model_class = Profile
.page-header
  %h2=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @profiles.each do |profile|
      %tr
        %td= link_to profile.name, project_profile_path(profile.project, profile)
        %td= profile.description
        %td= profile.created_at.asctime
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_profile_path(profile.project, profile), :class => 'btn btn-info btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), project_profile_path(profile.project, profile), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_project_profile_path(@project), :class => 'btn btn-primary'
