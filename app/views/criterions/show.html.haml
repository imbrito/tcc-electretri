- model_class = Criterion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @criterion.name
%p
  %strong= model_class.human_attribute_name(:weigth) + ':'
  %br
  = @criterion.weigth
%p
  %strong= model_class.human_attribute_name(:preference) + ':'
  %br
  = @criterion.preference
%p
  %strong= model_class.human_attribute_name(:indifference) + ':'
  %br
  = @criterion.indifference
%p
  %strong= model_class.human_attribute_name(:veto) + ':'
  %br
  = @criterion.veto
%p
  %strong= model_class.human_attribute_name(:direction) + ':'
  %br
  = @criterion.direction


= link_to t('.back', :default => t("helpers.links.back")), project_criterions_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_project_criterion_path(@criterion.project, @criterion), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), project_criterion_path(@criterion.project, @criterion), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
